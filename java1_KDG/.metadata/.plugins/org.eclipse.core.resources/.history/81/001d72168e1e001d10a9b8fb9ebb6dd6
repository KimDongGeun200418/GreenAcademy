package sub3;
/*
 * 날짜 : 2022/08/17
 * 이름 : 김동근
 * 내용 : Java 반복문 실습하기
 */
public class ForTest {

	public static void main(String[] args) {
		
		//for
		for(int i=1 ; i<=5 ; i++) {
			System.out.println("i : "+i);
		}
		
		
		//1부터 10까지 합
		int sum = 0;
		for(int i=0 ; i<=10 ; i++) {
			sum += i; //덜 참조하도록
		}
		System.out.println("1부터 10까지 합 : "+sum);
		
		
		//1부터 10까지 짝수합
		sum = 0;
		
		/*
		 for(int i=0 ; i<=10 ; i+=2) {
		 sum += i;
		 }
		*/
		
		for(int i=0 ; i<=10 ; i++) {
			if(i%2 == 0) {
				sum += i;				
			}
		}
		
		System.out.println("1부터 10까지 짝수합 : "+sum);
		
		
		//중첩 for문
		for(int i=1 ; i<=3 ; i++) {
			
			System.out.println("i : "+i);
			
			for(int k=1 ; k<=5 ; k++) {
				System.out.println("k : "+k);
			}
			
		}
		
		
		//구구단
		System.out.println("**********");
		for(int i=1 ; i<=9 ; i++) {
			
			System.out.println(i + "단");
			
			for (int k=1 ; k<=9 ; k++) {
				int z = i * k ;
				System.out.println(i + " x " + k + " = " + z);
				
			}
		}
		
		
		//별삼각형
	}
	
}
