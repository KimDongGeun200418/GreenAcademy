package sub4;
/*
 * 날짜 : 2022/08/18
 * 이름 : 김동근
 * 내용 : Java 반복문 실습하기
 */
public class WhileTest {
	
	public static void main(String[] args) {		
		// 1부터 10까지 합
		int sum = 0;
		int k = 1;
		while(k<=10) {
			
			sum += k;
			
			k++;
		}
		
		System.out.println("1부터 10까지 합 : "+sum);
		
		
		// do ~ while
		int tot = 0;
		int i = 1;
		
		do {
			
			if(i%2 == 0) tot += i;
			i++;
		}while(i<=10);
		
		
		// break
		
		
		
		// continue
		
		
		
	} // main-end
}
